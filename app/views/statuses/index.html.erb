<div class="container">
    <div class="page-header">
      <div class="pull-right">
        <%= link_to 'New Status Update', new_status_path, class: "btn btn-info" %>
      </div>
      <h1>News Feed</h1></div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>User</th>
      <th>Status Update</th>
    </tr>
  </thead>

  <tbody>
    <% @statuses.each do |s| %>
      <tr>
        <td><%= s.user %></td>
        <td><%= link_to s.status, status_path(s) %></td>
        <td> <%= pluralize(s.likes.count, "like") %></td>
        <td> <%= button_to '+1', thumbs_up_status_path(s), method: :post %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>
